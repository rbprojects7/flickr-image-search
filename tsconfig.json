{
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "compilerOptions": {
    "noEmit": true,
    "pretty": true,

    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise",
      "es2015.iterable"
    ],
    "allowJs": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,

    "sourceMap": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "experimentalDecorators": true,
    "strict": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "jsx": "react",
    "module": "commonjs",
    "target": "es2017",

    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true
  },

  "compileOnSave": false,

  "exclude": [
    "**/__tests__/**",
    "**/node_modules/**",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "node_modules",
    "__tests__"
  ]
}